---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
const allPost = Object.values(import.meta.glob("./posts/*.md",{eager:true}))
---
<BaseLayout pageTitle="所有文章">
    <h1 class="text-center text-6xl font-bold py-10">所有文章</h1>
    <section class="w-full flex flex-wrap">
       {
            allPost.map((post:any,idx) => <Card idx={idx} post={post.frontmatter} url={post.url}></Card>)
       } 
    </section>

